<%= form_with(model: entry) do |form| %>
  <% if entry.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(entry.errors.count, "error") %> prohibited this entry from being saved:</h2>

      <ul>
        <% entry.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div style="font-family: verdana;">
    <%= form.label :subject_id, "Subject name:", style: "display: block" %>
    <%= form.text_field :subject_id, :value => params[:subject_id], size: "50em" %>
  </div>

  <div style="font-family: verdana;">
    <%= form.label :category_id, style: "display: block" %>
    <%= form.text_field :category_id, :value => params[:category_id], size: "50em" %>
  </div>

  <div style="font-family: verdana;">
    <%= form.label :date, style: "display: block" %>
    <%= form.date_field :date, :value => Time.now.strftime("%Y-%m-%d") %>
  </div>

  <div style="font-family: verdana;">
    <%= form.label :rating, class: "form-label" %>
    <p>1
    <%= form.range_field :rating, :class=>"form-range; col-9", :min=> 1, :max=> 5, :id=>"slider1", size: "50em" %>5</p>
  </div>

  <div style="font-family: verdana;">
    <%= form.label :notes, "Review:", style: "display: block" %>
    <%= form.text_area :notes, size: "50emx10" %>
  </div>

  <div style="font-family: verdana;">
    <%= link_to "Back", :back, class:"btn btn-secondary", form: {style: 'display:inline-block;'} %>
    <%= form.submit class:"btn btn-success"%>
  </div>
<% end %>
