<%= form_with(model: entry) do |form| %>
  <% if entry.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(entry.errors.count, "error") %> prohibited this entry from being saved:</h2>

      <ul>
        <% entry.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div style="font-family: verdana;">
    <%= form.label :subject_id, style: "display: block"%> 
    <%= form.number_field :subject_id, :value => entry.subject_id %>
  </div>

  <div style="font-family: verdana;">
    <%= form.label :category_id, style: "display: block" %> 
    <%= form.number_field :category_id, :value => entry.category_id %>
  </div>

  <div style="font-family: verdana;">
    <%= form.label :date, style: "display: block" %>
    <%= form.date_field :date, :value => entry.date.strftime("%Y-%m-%d") %>
  </div>

  <div style="font-family: verdana;">
    <%= form.label :rating, class: "form-label" %>
    <p>1
    <%= form.range_field :rating, :class=>"form-range; col-10", :min=> 1, :max=> 5, :id=>"slider1" %>5
  </div>

  <div style="font-family: verdana;">
    <%= form.label :notes, style: "display: block" %>
    <%= form.text_area :notes %>
  </div>

  <div style="font-family: verdana; margin-bottom: 6px">
    <%= link_to "Back", :back, class:"btn btn-secondary", form: {style: 'display:inline-block;'} %>
    <%= form.submit class:"btn btn-success"%>
  </div>
<% end %>
