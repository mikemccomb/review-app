<div class="container">
<h1>Editing entry</h1>

<%= render "form", entry: @entry %>

<br>

<div>
  <%= link_to "Back to entry list", subject_path(@entry.subject_id), class:"btn btn-secondary", form: {style: 'display:inline-block;'} %>
  <%= link_to "Show this entry", @entry, class:"btn btn-info", form: {style: 'display:inline-block;'}  %>
  <%= button_to "Delete", @entry, method: :delete, class:"btn btn-danger", form: {data: {turbo_confirm: "Are you sure?"}, style: 'display:inline-block;'} %>
</div>
</div>