<div class="container">
  <p style="color: green"><%= notice %></p>

  <h1>All Subjects</h1>
  <div style="margin-bottom: 6px">
      <%= link_to "New subject", new_subject_path, class:"btn btn-success", form: {style: 'display:inline-block;'}%>
      <%= link_to "Back to categories", categories_path, class:"btn btn-secondary", form: {style: 'display:inline-block;'} %>
  </div>

  <div id="subjects" class="d-grid gap-2">
    <% @subjects.each do |subject| %>
      <%= render subject %>
    <% end %>
  </div>
</div>