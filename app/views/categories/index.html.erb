<div class="container-lg">
  <p style="color: green"><%= notice %></p>

  <div class="container-lg" style="margin-bottom: 6px">
    <h1>All Categories</h1>
      <%= link_to "New category", new_category_path, class:"btn btn-success", form: {style: 'display:inline-block;'}%> 
      <%= link_to "See all subjects", subjects_path, class:"btn btn-primary", form: {style: 'display:inline-block;'} %>
  </div>

    <div id="categories" class="container-lg d-grid gap-2">
      <% @categories.each do |category| %>
        <%= render category %>
      <% end %>
    </div>
</div>
