<%= form_with(model: category) do |form| %>
  <% if category.errors.any? %>
    <div style="color: red">
      <h4><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h4>

      <ul>
        <% category.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container-lg" style="col-6">
    <%= form.label :name, "Category Name:", style: "display: block" %>
    <%= form.text_field :name, size: "50em" %>
  </div>
  
  <div class="container-lg" style="col-6">
    <%= form.label :description, "Category Description:", style: "display: block" %>
    <%= form.text_area :description, size: "50emx6em", maxlength: 255 %>
  </div>

  <div class="container-lg" style="margin-bottom: 6px">
    <%= form.submit class:"btn btn-success"%>
    <%= link_to "Cancel", categories_path, class:"btn btn-secondary", form: {style: 'display:inline-block;'} %>
  </div>
<% end %>
