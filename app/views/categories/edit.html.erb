<div class="container">

<h1>Editing <%= @category.name %> </h1>

<%= render "form", category: @category %>
<br>

<div>
  <%= button_to "Destroy this category", @category, method: :delete, class:"btn btn-danger", form: {style: 'display:inline-block;'} %>
  <%= link_to "Show this category", @category, class:"btn btn-info", form: {style: 'display:inline-block;'} %>
  <%= link_to "Back to categories", categories_path, class:"btn btn-secondary", form: {style: 'display:inline-block;'} %>
</div>
</div>